{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Verbose",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "AzureAdSettings": {
    "ClientId": "[Your Client ID]",
    "Tenant": "[TenantName].onmicrosoft.com",
