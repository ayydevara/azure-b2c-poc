    "RedirectUri": "https://localhost:44366/",
    "SignUpPolicyId": "sign-up-policy",
    "SignInPolicyId": "sign-in-policy",
    "UserProfilePolicyId": "profile-editing-policy",
    "PasswordResetPolicyId": "password-reset-policy"
  }
}
